package components


templ DefaultInput(label , name, value, placeholder, tipo string, required bool) {
	<div class="mb-4">
		<label for="{ name }" class="block text-sm font-medium text-gray-700">{ label }</label>
		<input type="{ tipo }" name="{ name }" id="{ name }" value="{ value }" placeholder="{ placeholder }" required="{ required }" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
	</div>
}